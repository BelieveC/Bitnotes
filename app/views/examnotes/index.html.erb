 <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
			<div class="main-grids">
				<div class="top-grids">
					<div class="recommended-info">
						<h3>Recent Examnotes</h3>
					</div>
					<% @recentExamnotes.each do |examnote| %>
						<div class="col-md-4 resent-grid recommended-grid slider-top-grids">
							<% if examnote.eimages.count > 0 %>
								<div class="resent-grid-img recommended-grid-img">
									<%=link_to image_tag(examnote.eimages.first.image.url(:medium),alt: examnote.topic),examnote %>
									<div class="time">
										<p>3:04</p>
									</div>
									<div class="clck">
										<span class="glyphicon glyphicon-list-alt" aria-hidden="true"></span>
									</div>
								</div>
							<% end %>
							<div class="resent-grid-info recommended-grid-info">
								<h3><%=link_to examnote.topic,examnote,class:"title title-info" %><br><small>Submitted <strong> <%=time_ago_in_words(examnote.created_at) %> ago</strong></small></h3>
								<ul>
									<li><p class="author author-info"><a href="#" class="author">John Maniya</a></p></li>
									<li class="right-list"><p class="views views-info"><%= examnote.impressionist_count %> views</p></li>
								</ul>
							</div>
						</div>
					<% end %>
					<div class="clearfix"> </div>
				</div>
