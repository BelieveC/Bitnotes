=simple_form_for(@examnote,html:{multipart: true}) do |f|

	=f.input :topic, label: "Title",placeholder:"What is your Examnote About?"
	=f.input :subject_id,collection: Subject.all,prompt: "Choose Subject of Exam Note",label:"Subject Name",hint:"If Institute not Found,add Subject via Upload Link Above"

	=f.input :college_id,collection: College.all,label:"Institute",prompt:"Choose Institute related to Exam Note",hint:"If Institute not Found,add Your Institute via Upload Link Above",label:"Institute Name"
	=f.input :description, label: "Description", placeholder:"Describe your examnote",input_html:{class:'tinymce'},hint:"Describe Exam Note Above"
	%h2 Images

	#tasks
	=f.simple_fields_for :eimages do |eimage|
		=render "eimage_fields", f: eimage
	.links
		=link_to_add_association "Add Images",f, :eimages, class:"btn btn-success"
	%br
	=f.submit class:"btn btn-primary"
