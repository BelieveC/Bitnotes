<% title "Dashboard for #{@user.phname}" %>
<div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
		<% if flash.any?%>
		<div class="alert alert-success alert-dismissible" role="alert">
		   	<button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true	">&times;</span></button>
		   	<h4><%= flash[:notice]%></h4>
		</div>
	<% end %>			
	<div class="main-grids">
		<% if @practicals.present? || @qpapers.present? || @examnotes.present? || @assignments.present? || @subjects.present? || @colleges.present? %>
			<% if @practicals.present? %>
				<div class="recommended">
					<div class="recommended-grids">
						<div class="recommended-info">
							<h4><strong><%= @practicals.count %></strong> Practicals contributed to Open Source Education!</h4>
						</div>
						<% @practicals.each do |practical| %>
							<div class="col-md-3 resent-grid recommended-grid">
								<div class="resent-grid-img recommended-grid-img">
								<% if practical.pimages.count > 0 %>
									<%= link_to image_tag(practical.pimages.first.image.url(:small),alt: practical.title),practical %>
								<%else %>
									<%= link_to image_tag("defaultcoverimage",alt: practical.title),practical %>
								<% end %>
									<div class="time small-time" title="Pages Count">
										<p><%= practical.pimages.count %></p>
									</div>
									<div class="clck small-clck" title="Pages">
										<span class="glyphicon glyphicon-list-alt" aria-hidden="true"></span>
									</div>
								</div>
							</div>
							<div class="col-md-6 resent-grid recommended-grid ">
								<div class="resent-grid-info recommended-grid-info video-info-grid searchinfodiv">
									<h5><%= link_to practical.title,practical,class:"title"%></h5>
									<p class="views views-info"><strong><%=practical.impressionist_count %></strong> views</p>
									<br>
									<ul>
										<li><span><%=link_to "Edit",edit_practical_path(practical),class:"dashActionLinks" %><span><span><%=link_to "Delete",practical,method: :delete,data:{confirm:"Are you sure?"},class:"dashActionLinks"%></span></li>
										<br>
										<li><strong><%= time_ago_in_words(practical.created_at)%></strong> ago</li>
									</ul>
								</div>
							</div>
							<div class="col-md-3"></div>
							<div class="clearfix"></div>	
							<br>		
						<% end %>
						<div class="clearfix"> </div>
					</div>
				</div>
			<% end %>
