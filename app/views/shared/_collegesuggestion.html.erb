<div class="single-right-grids">
	<div class="col-md-4 single-right-grid-left">
		<% if college.cimages.count > 0 %>
			<%= link_to image_tag(college.cimages.first.image.url(:small),alt:college.name),college %>
		<% else%>
			<%= link_to image_tag("defaultcoverimage",alt:college.name),college %>
		<% end %>
	</div>
	<div class="col-md-8 single-right-grid-right">
		<p class="wrap" title="<%=college.name %>"><%= link_to college.name,college,class:"title"%></p> 
		<p class="author"><%= link_to college.user.phname,  controller:"users",action:"show",id:college.user_id,class:"author"%></p>
		<p class="views"><%= college.views %> views</p>
	</div>
	<div class="clearfix"> </div>
</div>