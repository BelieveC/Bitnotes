=simple_form_for(@assignment,html:{multipart: true}) do |f|

	=f.input :topic, label: "Title",placeholder:"What is your Assignment About?"
	=f.input :subject_id,collection: Subject.all,prompt: "Choose Subject of Assignment",label:"Subject Name",hint:"If Institute not Found,add Subject via Upload Link Above"

	=f.input :college_id,collection: College.all,label:"Institute",prompt:"Choose Institute related to Assignment",hint:"If Institute not Found,add Your Institute via Upload Link Above",label:"Institute Name"
	=f.input :description, label: "Description", placeholder:"Describe your Assignment",input_html:{class:'tinymce'},hint:"Describe the Assignment Above"
	%h2 Images

	#tasks
	=f.simple_fields_for :aimages do |pimage|
		=render "aimage_fields", f: pimage
	.links
		=link_to_add_association "Add Images",f, :aimages, class:"btn btn-success"
	%br
	=f.submit class:"btn btn-primary"
