<div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
	<div class="show-top-grids">
		<% if flash.any? %>
			<div class="alert alert-success alert-dismissible" role="alert">
			   	<button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true	">&times;</span></button>
			   	<h4><strong>Success!</strong> <%= flash[:notice]%></h4>
			</div>
		<% end %>
		<div class="col-sm-8 single-left">
			<div class="song">
				<div class="song-info">
					<h3><%=@subject.name %></h3>	
			</div>
				<div class="video-grid">
					<ul class="docs-pictures">
						<% if session[:user_id] && @subject.simages.count > 0 %>
							<li><% @subject.simages.each do |simage| %>
								<%=image_tag(simage.image.url(:medium),alt: @subject.name,class: "img-thumbnail",height:"140px",width:"140px",data:{original:simage.image.url(:thumb)}) %></li>
							<% end %>
						<% end %>
					</ul>
				</div>
			</div>
			<div class="clearfix"> </div>
			<div class="show-right-grids">
				<ul>
					<li class=""><%= link_to image_tag("#",alt:"logo",height: "50px") %></li>
					<li><a href="#">English Movies</a><br><a href="#small-dialog8" id="suggestion_subscribe_btn" class="play-icon popup-with-zoom-anim">Subscribe</a></li>
                    <br>
				</ul>
			</div>
			<div class="social_response">
				<ul>
					<li><a href="#" class="icon fb-icon" title="Share on Facebook" id="shareBtn">Facebook</a></li>
					<li><a href="https://twitter.com/intent/tweet?text= <%= @subject.name%>" target="_blank"  class="icon twitter-icon" title="Share on Twitter">Twitter</a></li>
					<li><a href="#" class="icon pinterest-icon" title="Share on Pinterest">Pinterest</a></li>
					<li><%=link_to like_subject_path(@subject),method: :put,title:"Like this",remote: true,class:"icon like" do%>
							<span class="likecount"><%= @subject.get_upvotes.size %></span>
						<% end%>
					</li>
					<li class="view" title="Views Count"><%=@subject.impressionist_count %> Views</li>
					<% if session[:user_id] && session[:user_id] == @subject.user_id %>
						<li><%=link_to "Edit",edit_subject_path(@subject),id:"edit_profile_btn" %></li>
						<li><%=link_to "Delete",@subject,method: :delete,confirm:"Are you sure?",id:"edit_profile_btn" %></li>
					<% end %>
				</ul>
				<%= render "fbshare" %>
			</div>
			<div class="clearfix"> </div>
			<div class="published">
				<div class="load_more">	
					<ul id="myList">
						<li>
							<h4>Published on <%= @subject.created_at.strftime("%d %B %Y") %></h4>
							<p><%= @subject.name %></p>
						</li>
						<li>
							
							<div class="load-grids">
								<div class="load-grid">
									<p>Category</p>
								</div>
								<div class="load-grid">
									<%=link_to "Subject",subjects_path %>
								</div>
								<div class="clearfix"> </div>
							</div>
						</li>
					</ul>
					<button id="loadMore">Load more</button>
					<button id="showLess">Show less</button>
				</div>
			</div>
			<div class="all-comments">
