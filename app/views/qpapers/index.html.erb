<% title "Trending Papers" %>
<% keywords "Papers,Exams, Free, BitNotes, Education, Sharing, Caring, Earn, Learn" %>
<% description " Free Trending Notes from BitNotes" %>
<% author "BitNotes" %>
<div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
	<div class="main-grids">
		<div class="recommended">
			<div class="recommended-grids">
				<%=  render "shared/adsense" %>
				<br>
	<% if current_user && current_user.college_id.present? %>
				<div class="recommended-info">
					<h3>Recommended</h3>
				</div>
				<% @rqpapers.each do |qpaper| %>
					<%= render partial:"shared/qpaper",locals:{qpaper: qpaper} %>
				<% end %>
				<div class="clearfix"> </div>
			</div>
		</div>
		<hr>
		<div class="recommended">
			<div class="recommended-grids">
	<% end %>
				<div class="recommended-info">
					<h3>Papers</h3>
				</div>
				<% @recentQpapers.each do |qpaper| %>
					<%= render partial: "shared/qpaper",locals:{qpaper: qpaper} %>
				<% end %>
				<div class="clearfix"> </div>
			</div>
		</div>
		<div class="loadmoreqpaperdiv">
			<%= link_to "Load More",loadmoreqpapers_path(page: @qpaperpageindex + 1),remote: true,class:"loadmorebtn" %>
		</div>
	</div>
	
	<%= render "shared/advfooter" %>
