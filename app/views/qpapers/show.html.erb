<div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
	<div class="show-top-grids">
		<% if flash.any? %>
			<div class="alert alert-success alert-dismissible" role="alert">
			   	<button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true	">&times;</span></button>
			   	<h4><strong>Success!</strong> <%= flash[:notice]%></h4>
			</div>
		<% end %>
		<div class="col-sm-8 single-left">
			<div class="song">
				<div class="song-info">
					<h3><%= @qpaper.examname %></h3>	
			</div>
				<div class="video-grid">
					<ul class="docs-pictures">
						<% if @qpaper.qimages.count > 0 %>
							<% @qpaper.qimages.each do |qimage| %>
								<li><%=image_tag(qimage.image.url(:medium),alt: @qpaper.examname,class: "img-thumbnail",height:"140px",width:"140px",data:{original: qimage.image.url(:thumb)}) %></li>
							<% end %>
						<% end %>
					</ul>
				</div>
			</div>
			<div class="clearfix"></div>
			<% user = User.find(@qpaper.user_id) %>


			<div class="show-right-grids">
				<ul>
					<li>
						<% if user.avatar.url == "/avatars/original/missing.png" %>
		                	<%= link_to image_tag("customprofile",alt:"logo",height: "50px"),controller:"users",action:"show",id:user.id %> 
		                <%else%>
		                	<%= link_to image_tag(user.avatar.url,alt:"logo",height: "50px",alt:user.name),controller: "users",action:"show",id:user.id %>
		                <% end %>

					</li>
					<li><%=link_to @qpaper.user_name,controller:"users",action: "show",id: @qpaper.user_id%><br><a href="#small-dialog8" id="suggestion_subscribe_btn" class="play-icon popup-with-zoom-anim">Subscribe</a></li>
                    <br>
				</ul>
			</div>
			<div class="social_response">
				<ul>
					<li><a href="#" class="icon fb-icon" title="Share on Facebook" id="shareBtn">Facebook</a></li>
					<li><a href="https://twitter.com/intent/tweet?text= <%= @qpaper.examname%>" target="_blank" class="icon twitter-icon" title="Share on Twitter">Twitter</a></li>
					<li><a href="#" class="icon pinterest-icon" title="Share on Pinterest">Pinterest</a></li>
					<li><%=link_to like_qpaper_path(@qpaper),method: :put,remote: true,title:"Like this",class:"icon like" do %>
							<span class="likecount"><%= @qpaper.get_upvotes.size %></span>
						<% end %>
					</li>
					<li class="view" title="Views Count"><%= @qpaper.impressionist_count %> Views</li>
					<% if session[:user_id] && session[:user_id] == @qpaper.user_id %>
						<li><%=link_to "Edit",edit_qpaper_path(@qpaper),id:"edit_profile_btn" %></li>
						<li><%=link_to "Delete",@qpaper,method: :delete,confirm:"Are you sure?",id:"edit_profile_btn" %></li>
					<% end %>
				</ul>
				<%= render "fbshare" %>
			</div>
			<div class="clearfix"> </div>
			<div class="published">
				<div class="load_more">	
					<ul id="myList">
						<li>
							<h4>Published on <%= @qpaper.created_at.strftime("%d %B %Y") %></h4>
							<p><%= simple_format(@qpaper.description.slice(0..30))%>
						</li>
						<li>
							<%= simple_format(@qpaper.description.slice(30..-1)) %></p>
							<div class="load-grids">
								<div class="load-grid">
									<p>Category</p>
								</div>
								<div class="load-grid">
									<%= link_to "Paper",qpapers_path%>
								</div>
								<div class="clearfix"> </div>
							</div>
						</li>
					</ul>
					<button id="loadMore">Load more</button>
					<button id="showLess">Show less</button>
				</div>
			</div>
			<div class="all-comments">
				<div class="all-comments-info">
					<%= render "disqus" %>
				</div>
			</div>
		</div>
		<div class="col-md-4 single-right">
			<h3>Up Next</h3>
			<div class="single-grid-right">
				<% @recentQpapers.each do |qpaper| %>
					<div class="single-right-grids">
						<% if qpaper.qimages.count > 0 %>
							<div class="col-md-4 single-right-grid-left">
								<%= link_to image_tag(qpaper.qimages.first.image.url(:small),alt:qpaper.examname),qpaper %>
							</div>
						<% end %>
						<div class="col-md-8 single-right-grid-right">
							<%= link_to qpaper.examname,qpaper,class:"title"%>
							<p class="author"><a href="#" class="author">John Maniya</a></p>
							<p class="views"><%= qpaper.impressionist_count %> views</p>
						</div>
						<div class="clearfix"> </div>
					</div>
				<% end %>
				<% @recentPracticals.each do |practical| %>
					<div class="single-right-grids">
						<% if practical.pimages.count > 0 %>
							<div class="col-md-4 single-right-grid-left">
								<%= link_to image_tag(practical.pimages.first.image.url(:small),alt: practical.title),practical %>
							</div>
						<% end %>
						<div class="col-md-8 single-right-grid-right">
							<%= link_to practical.title,practical,class:"title"%>
							<p class="author"><a href="#" class="author">John Maniya</a></p>
							<p class="views"><%= practical.impressionist_count %> views</p>
						</div>
						<div class="clearfix"> </div>
					</div>
				<% end %>
				<% @recentAssignments.each do |assignment| %>
					<div class="single-right-grids">
						<% if assignment.aimages.count > 0 %>
							<div class="col-md-4 single-right-grid-left">
								<%= link_to image_tag(assignment.aimages.first.image.url(:small),alt: assignment.topic),assignment %>
							</div>
						<% end %>
						<div class="col-md-8 single-right-grid-right">
							<%= link_to assignment.topic,assignment,class:"title"%>
							<p class="author"><a href="#" class="author">John Maniya</a></p>
							<p class="views"><%= assignment.impressionist_count %> views</p>
						</div>
						<div class="clearfix"> </div>
					</div>
				<% end %>
				<% @recentExamnotes.each do |examnote| %>
					<div class="single-right-grids">
						<% if examnote.eimages.count > 0 %>
							<div class="col-md-4 single-right-grid-left">
								<%= link_to image_tag(examnote.eimages.first.image.url(:small),alt: examnote.topic),examnote %>
							</div>
						<% end %>
						<div class="col-md-8 single-right-grid-right">
							<%= link_to examnote.topic,examnote,class:"title"%>
							<p class="author"><a href="#" class="author">John Maniya</a></p>
							<p class="views"><%= examnote.impressionist_count %> views</p>
						</div>
						<div class="clearfix"> </div>
					</div>
				<% end %>
			</div>
		</div>
		<div class="clearfix"> </div>
	</div>