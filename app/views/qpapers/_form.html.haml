=simple_form_for(@qpaper,html:{multipart: true}) do |f|

	=f.input :examname, label: "Title",placeholder:"What is name Question Paper?"
	=f.input :date, label: "Date",hint:"Date of Conduction of Paper",placeholder:"Date of Examination"
	=f.input :description, label: "Description", placeholder:"Describe your Paper",input_html:{class:'tinymce'},hint:"Describe the Question Paper"
	%h2 Images

	#tasks
	=f.simple_fields_for :qimages do |qimage|
		=render "qimage_fields", f: qimage
	.links
		=link_to_add_association "Add Images",f, :qimages, class:"btn btn-success"
	%br
	=f.submit class:"btn btn-primary"
=tinymce